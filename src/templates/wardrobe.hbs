<li id="{{id}}" class="item">
  <div class="item__wrapper">
    <div class="item__subtext">
      <h3 class="item__subtitle">{{name}}</h3>
      <p class="item__price">{{price}}$</p>
    </div>
    <ul class="item__sublist">
      <li class="item__subitem">
        <p class="item__subdesc">Size:
          <span class="item__subspan">{{size}}</span></p>
      </li>
      <li class="item__subitem">
        <p class="item__subdesc">Color:
          <span class="item__subspan">{{color}}</span></p>
      </li>
      <li class="item__subitem">
        <p class="item__subdesc">Clothe:
          <span class="item__subspan">{{clothe}}</span></p>
      </li>
    </ul>
    <button data-action="add" class="item__btn" type="button">Add to basket</button>
  </div>
</li>